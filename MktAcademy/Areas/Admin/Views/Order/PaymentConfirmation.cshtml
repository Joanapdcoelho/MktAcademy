@model int


<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-success text-center">Payment successful!</h1>
        Order Number: @Model <br /> <br />
        <img src="~/images/payment success.jpg" width="65%" />
    </div>
    <div class="col-12 text-center text-primary">
        <br />
        Payment has been applied successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary"><i class="fa-solid fa-left-long"></i> Back to Order Details</a>
    </div>    
</div>