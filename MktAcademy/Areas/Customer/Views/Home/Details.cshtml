
@model ShoppingCart
<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5 page-header">    
    <div class="container py-5">        
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Course Details</h1>                
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<form method="post">
    <input hidden asp-for="CourseId">
    <div class="card shadow border-0 my-4">
        <div class="card-header bg-primary bg-gradient text-light py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Course.Name</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase" asp-action="Index">
                            Back to home
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Course.ImageUrl" width="100%" class="rounded" />
                    </div>                    
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge"></span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-primary text-opacity-50 ">@Model.Course.Name</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                @if (User.IsInRole(SD.Role_Company))
                                {
                                    <b>Price:</b>

                                    <strike> @Model.Course.ListPrice.ToString("c")</strike>
                                    <b>Company Price:</b> @Model.Course.Price20.ToString("c")
                                }
                                else
                                {
                                    <b>Price: </b>

                                    @Model.Course.ListPrice.ToString("c")
                                }
                                
                                
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">1</div>
                            </div>

                        </div>
                        
                        <div class="row text-center ps-2">
                            @if (User.IsInRole(SD.Role_Company))
                            {
                                <div class="p-1 col-3 col-lg-2 bg-white text-dark fw-bold">
                                    <div><span class="text-primary">Price</span> @Model.Course.Price20.ToString("c")</div>
                                </div>
                            }
                            else
                            {
                                <div class="p-1 col-3 col-lg-2 bg-white fw-bold">
                                    <div><span class="text-primary">Price</span> @Model.Course.ListPrice.ToString("c")</div>
                                </div>
                            }                 

                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Course.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" class="btn btn-success bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
