<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">

        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="section-title bg-white text-center text-primary px-3">Courses</h1>
        </div>
        <div class="row pb-3">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="row g-4 justify-content-center">
                        <div class="col-lg-12 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="course-item bg-light">
                                <div class="position-relative overflow-hidden">
                                    <img class="img-fluid" src="@course.ImageUrl">
                                    <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                        <a asp-action="Details" asp-route-courseId="@course.Id" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Details</a>
                                    </div>
                                </div>
                                <div class="text-center p-4 pb-0">
                                    <h3 class="mb-0">@course.ListPrice.ToString("c")</h3>
                                    <div class="mb-3 text-warning">
                                        <small><i class="fa-solid fa-star"></i></small>
                                        <small><i class="fa-solid fa-star"></i></small>
                                        <small><i class="fa-solid fa-star"></i></small>
                                        <small><i class="fa-solid fa-star"></i></small>
                                        <small><i class="fa-solid fa-star"></i></small>
                                                                                
                                    </div>
                                    <h5 class="text-primary mb-4">@course.Name</h5>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>Mariana Antunes</small>
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@course.Remarks</small>
                                    <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>20 Students</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Courses End -->
