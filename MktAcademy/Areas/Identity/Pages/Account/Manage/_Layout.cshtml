@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container-fluid bg-primary py-5 mb-5 page-header-login">
    <div class="container py-5 animated">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">ACCOUNT</h1>
            </div>
        </div>
    </div>
</div>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient m-lg-0">
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-md-12">
                <div class="text-primary text-center">
                    <h1>Manage your account</h1>
                </div>
                <div class="text-center">
                    <h2>Change your account settings</h2>
                </div>
                <hr />
                <div>
                    <div class="row">
                        <div class="col-md-3">
                            <partial name="_ManageNav" />
                        </div>
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
